<div class="book">
    <div class="space">

    </div>

    <form action="/store-order" method="post">
            <div class="container">
            <div class="route">
                <i class="fa-solid fa-house"></i>
                <span> > Đặt bàn</span>
                
            </div>

            <div class="title">
                <div class="title1">
                    <b>ĐẶT BÀN ONLINE</b>
                </div>
                <div class="hotline">
                    <b>— Hotline 0386 640 397 —</b>
                </div>
            </div>

            <div class="menu-products">
                <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Giá tiền</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Xoá</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <input type="text" style="display: none;" value="{{this._id}}" name="products">
                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td><img src="./{{this.img}}" alt=""></td>
                        <td style="color: red;">{{this.price}}đ</td>
                        <td> <input type="number" value="1" minlength="1" name="count"> </td>
                        <td ><i class="fa-solid fa-trash-can deleteProduct"></i></td>
                    </tr>
                    {{/each}}
                    
                </tbody>
                </table>
            </div>

            <p style="font-size: 25px; margin-top: 25px; color: red; margin-bottom: 25px;">Vui lòng chọn bàn !!</p>
            
            
            
            
            <div class="menu-table-book">
                
                {{#each tables}}
                <div class="table-me">
                    <div class="img">
                        <img src="./images/ban-an.jpg" alt="">
                    </div>

                    <div class="radio">
                        <input type="checkbox" id="table1" name="table_book" value="{{this._id}}">
                        <label for="table1">{{this.name}}</label><br>
                    </div>

                    <div class="status-book">

                    </div>


                </div>

                {{/each}}




            </div>

            <div class="form-user-info">
                <div class="img">
                    <img src="./images/cau-truyen-thuong-hieu.jpg" alt="">
                </div>
                <div class="user-info">
                    <div class="form-info user-name">
                        <label for="user-name">Họ Tên</label> <br>
                        <div class="form-input">
                            <i class="fa-solid fa-user"></i>
                            <input type="text" placeholder="Họ Và Tên" id="user-name" name="userName">
                    
                        </div>
                    </div>

                    <div class="form-info user-phone">
                        <label for="user-phone">Số Điện Thoại</label> <br>
                        <div class="form-input">
                            <i class="fa-solid fa-square-phone"></i>
                            <input type="number" placeholder="Số Điện Thoại" id="user-phone" name="userPhone">
                    
                        </div>
                    </div>

                    <div class="form-info user-email">
                        <label for="user-email">Email</label><br>
                        <div class="form-input">
                            <i class="fa-solid fa-envelope-circle-check"></i>
                            <input type="email" placeholder="Email" id="user-email" name="userEmail">

                        </div>
                    </div>
                    
                    <div class="form-info user-note">
                        <label for="user-note">Ghi Chú</label><br>
                        <div class="form-input">
                            <i class="fa-solid fa-pencil"></i>
                            <textarea name="userNote" placeholder="Ghi Chú" id="user-note" cols="30" rows="1"></textarea>
                        
                        </div>
                    </div>

                    <div style="display: none;" class="date-time">
                        <div class="date">
                            <label for="user-date">Chon Ngày</label>
                            <input type="date" value="{{userDate}}" placeholder="Chọn Ngày" id="date" name="userDate">
                        
                        </div>

                        <div class="time">
                            <label for="time">Chon Giờ</label>
                            <input type="time" value="{{userTime}}" placeholder="Chọn Giờ" id="date" name="userTime">
                        
                        </div>
                    </div>
                    

                    

                </div>
            </div>

            <div class="submit">
                        <button type="submit" class="book-now">
                            <i class="fa-solid fa-money-check-dollar"></i>
                            <span>Đặt Bàn</span>
                        </button>
            </div>

        </div>
    
    </form>
</div>

<script>
    var header = document.getElementsByTagName('header')[0];
    var search = document.getElementById("search");
    var inputSearch = search.getElementsByTagName("input")[0];

    inputSearch.style.backgroundColor = "#fff"
    header.style.backgroundImage = "url('../images/banner/Untitled-2.jpg')";
    header.style.backgroundRepeat = "no-repeat";
    header.style.backgroundSize = "100%";
    header.style.margin ="0";
</script>

