
<div id="viewProduct">

    <div class="root">
        <div class="viewProduct-container">
            <div class="category">
                <div class="title">
                    <i class="fa-solid fa-bars"></i>
                    <span>Danh mục</span>
                </div>

                <div class="my-category">
                    <ul>
                        {{#each category}}
                        <li><a href="/admin/products/{{this.slug}}">{{this.name}}</a></li>
                        {{/each}}
                        
                        
                    </ul>
                </div>

                <div class="add-new-category">
                    
                </div>
            </div>
            <div class="products">
                <div class="title">
                    <i class="fa-solid fa-utensils"></i>
                    <span>Món ăn</span>
                </div>


                

                <div class="container my-products">
                    <div class="row navi">
                        <div class="col-1 checkbox">
                          
                        </div>

                        <div class="name col-3">
                            <span>Tên</span>
                        </div>

                        <div class="booked col-2">
                            <span>Đã đặt</span>
                        </div>

                        <div class="price col-2">
                            <span>Giá</span>
                        </div>

                        <div class=" col-2">
                            <span>Đã thêm</span>
                        </div>
                        <div class="edit col-1">
                            <span>sửa</span>
                        </div>
                        <div class="delete col-1">
                            <span>xóa</span>
                        </div>
                    </div>

                    {{#each product}}
                    <div class="row product">
                        <div class="col-1 checkbox">
                            <input type="checkbox" name="id">
                        </div>
                        <div class="name col-3">
                            <span>{{this.name}}</span>
                        </div>

                        <div class="booked col-2">
                            <span>{{this.countBooked}}</span>
                        </div>

                        <div class="price col-2">
                            <span>{{this.price}}</span>
                        </div>

                        <div class="time-add col-2">
                            <span>{{this.time}}</span>
                        </div>

                        <div class="edit col-1">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </div>

                        <div class="delete col-1">
                            <i class="fa-solid fa-trash-can"></i>
                        </div>
                    </div>
                    {{/each}}
                    



                </div>

                <div class="add-new-product">
                    <a href="/admin/addproduct">Thêm sản phẩm mới</a>
                </div>

                <div class="delete-selected-product">
                    <a href="">Xóa các sản phẩm đã chọn</a>
                </div>
            </div>
        </div>
    </div>

</div>
